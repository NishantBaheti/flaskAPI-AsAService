[Unit]
Description=Flask API running as a service in Ubuntu 16-04.
After=network.target

[Service]
User=nishant
WorkingDirectory=/opt/flaskapi
Environment="PATH=/opt/flaskapi/bin"
ExecStart=/opt/flaskapi/bin/gunicorn -b 0.0.0.0:8081 -w 4 app:app
Restart=always

[Install]
WantedBy=multi-user.target

